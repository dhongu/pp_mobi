<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	
	<SelectDialog
		title="Loturi disponibile"
		class="sapUiPopupWithPadding"
		items="{ path: 'StockCollection>/ROOT/STOCK', sorter: { path: 'LWEDT' } }"
		search="_handleValueHelpSearchCharg"
		confirm="_handleValueHelpCloseCharg"
		cancel="_handleValueHelpCloseCharg">
		<StandardListItem
			title="{StockCollection>CHARG} {StockCollection>MATL_DESC}"
			description="{StockCollection>LGORT}  {StockCollection>LWEDT} " 
			info="{StockCollection>QTY}"
			/>
	</SelectDialog> 

 
</core:FragmentDefinition>